extends:
  eslint-config-airbnb

parser:
  babel-eslint

settings:
  ecmascript: 6

ecmaFeatures:
  jsx: true
  modules: true
  destructuring: true
  classes: true
  forOf: true
  blockBindings: true
  arrowFunctions: true

env:
  browser: true

rules:
  array-callback-return: 0
  global-require: 0
  indent: 2
  func-style: 0
  func-names: 0
  comma-dangle: 0
  consistent-return: 0
  class-methods-use-this: 0
  no-console: 0
  no-param-reassign: 0
  no-unused-expressions: 0
  no-confusing-arrow: 0
  no-unused-vars: 0
  react/jsx-no-bind: 0
  react/jsx-filename-extension: 0
  react/prop-types: 0
  react/prefer-stateless-function: 0
  react/forbid-prop-types: 0
  react/no-unused-prop-types: 0
